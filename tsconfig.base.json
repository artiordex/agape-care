{
  "compilerOptions": {
    /* ê¸°ë³¸ ESM í™˜ê²½ */
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    /* Node/Vite/Vitest íƒ€ì… ì§€ì› */
    "types": ["node", "vitest", "vite/client"],

    /* ëª¨ë“ˆ í˜¸í™˜ì„± */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Strict ì˜µì…˜ */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    /* Declaration / SourceMap */
    "declaration": true,
    "sourceMap": true,
    "incremental": true,

    /* ëª¨ë…¸ë ˆí¬ Alias */
    "baseUrl": ".",
    "paths": {
      "@agape-care/api-contract": ["packages/api-contract/src/index.ts"],
      "@agape-care/database": ["dist/packages/database/index.d.ts"],
      "@agape-care/logger": ["dist/packages/logger/index.d.ts"],
      "@agape-care/ui": ["dist/packages/ui/src/index.ts"]
    }
  },

  "exclude": ["node_modules", "dist", "build", ".next", "out"]
}
