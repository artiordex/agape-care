{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,

    // κ²½λ΅
    "rootDir": "./src",
    "outDir": "../../dist/packages/configs",
    "declarationDir": "../../dist/packages/configs",
    "tsBuildInfoFile": "../../dist/packages/configs/.tsbuildinfo",

    // ESM + λ²λ“¤λ¬ ν•΄μ„
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,

    // μ„ μ–Έ νμΌ/μ†μ¤λ§µ
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,

    // Node μ „μ© λΌμ΄λΈλ¬λ¦¬
    "lib": ["es2022"],
    "types": ["node"],

    // ν’μ§ μ„¤μ •
    "resolveJsonModule": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true
  },

  // JSON νμΌ ν¬ν•¨
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["dist", "node_modules"]
}
