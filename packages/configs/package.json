{
  "name": "@agape-care/configs",
  "version": "1.0.0",
  "description": "Agape-Care 공통 설정/환경변수/런타임 구성 라이브러리",
  "private": true,
  "author": "Shiwoo Min <artiordex@gmail.com>",
  "type": "module",
  "sideEffects": false,

  "files": ["dist"],

  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },

  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json -w",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },

  "engines": {
    "node": ">=20.11.0"
  },

  "dependencies": {
    "@t3-oss/env-core": "^0.10.0",
    "@t3-oss/env-nextjs": "^0.10.0",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },

  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^24.3.1",
    "rimraf": "^6.0.1"
  }
}
