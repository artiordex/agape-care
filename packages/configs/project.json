{
  "name": "configs",
  "sourceRoot": "packages/configs/src",
  "projectType": "library",
  "tags": ["type:lib", "layer:tooling"],

  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "packages/configs/src/index.ts",
        "outputPath": "dist/packages/configs",
        "tsConfig": "packages/configs/tsconfig.json",
        "assets": [
          "packages/configs/package.json"
        ]
      }
    },

    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/configs/**/*.ts"]
      }
    },

    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
