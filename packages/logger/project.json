{
  "name": "@agape-care/logger",
  "version": "1.0.0",
  "description": "Agape-Care 로깅 모듈 (Winston 기반 - Cloud/Local/Container 공용)",
  "private": true,
  "type": "module",
  "sideEffects": [
    "./dist/**/*.js"
  ],
  "files": ["dist"],

  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./logger-types": {
      "types": "./dist/logger-types.d.ts",
      "import": "./dist/logger-types.js"
    },
    "./package.json": "./package.json"
  },

  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },

  "dependencies": {
    "logform": "^2.7.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-transport": "^4.9.0"
  },

  "devDependencies": {
    "@types/node": "^24.3.1",
    "eslint": "^9.36.0",
    "rimraf": "^6.0.1",
    "typescript": "5.6.3"
  },

  "nx": {
    "implicitDependencies": [],
    "targets": {
      "build": {
        "dependsOn": []
      }
    }
  },

  "engines": {
    "node": ">=20.11",
    "pnpm": ">=10.7.0"
  }
}
