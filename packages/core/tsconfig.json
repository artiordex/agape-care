{
  "compilerOptions": {
    "composite": true,

    "rootDir": "./src",
    "outDir": "../../dist/packages/core",
    "declarationDir": "../../dist/packages/core",
    "tsBuildInfoFile": "../../dist/packages/core/.tsbuildinfo",

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "verbatimModuleSyntax": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,

    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,

    "baseUrl": "./",
    "paths": {
      "@agape-care/core/*": ["src/*"],
      "@agape-care/core-types": ["src/core-types.ts"]
    }
  },

  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.*", "**/*.spec.*"],

  "references": [
    { "path": "../api-contract" }
  ]
}
