{
  "name": "@agape-care/core",
  "version": "1.0.0",
  "description": "Agape-Care 요양원 ERP 핵심 코어 라이브러리 (AI · Auth · Queue · Infra)",
  "private": true,
  "author": "Shiwoo Min <artiordex@gmail.com>",
  "type": "module",
  "sideEffects": false,

  "files": ["dist"],

  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core-types": {
      "types": "./dist/core-types.d.ts",
      "import": "./dist/core-types.js"
    },
    "./package.json": "./package.json"
  },

  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json -w",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },

  "engines": {
    "node": ">=20.11.0"
  },

  "dependencies": {
    "@anthropic-ai/sdk": "^0.61.0",
    "@huggingface/inference": "^4.7.1",
    "@slack/web-api": "^7.6.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.58.5",
    "dayjs": "^1.11.10",
    "ioredis": "^5.7.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "openai": "^5.20.0",
    "openapi-types": "^12.1.3",
    "openapi3-ts": "^4.5.0",
    "zod": "^3.23.8"
  },

  "peerDependencies": {
    "@nestjs/common": "^11",
    "@nestjs/core": "^11"
  },
  "peerDependenciesMeta": {
    "@nestjs/common": { "optional": true },
    "@nestjs/core": { "optional": true }
  },

  "devDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@types/node": "^24.3.1",
    "@types/node-fetch": "^2.6.13",
    "@types/nodemailer": "^7.0.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  }
}
