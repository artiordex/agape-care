{
  "name": "@agape-care/client",
  "version": "1.0.0",
  "description": "Agape-Care 요양원 ERP용 클라이언트 SDK (API 호출, Firebase, Mock 지원)",
  "private": true,
  "type": "module",
  "sideEffects": false,

  "files": ["dist"],

  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./mocks": {
      "types": "./dist/mocks/index.d.ts",
      "import": "./dist/mocks/index.js",
      "require": "./dist/mocks/index.js"
    },
    "./mocks/*": {
      "types": "./dist/mocks/*.d.ts",
      "import": "./dist/mocks/*.js",
      "require": "./dist/mocks/*.js"
    },
    "./package.json": "./package.json"
  },

  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "dev": "tsc --watch -p tsconfig.json",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },

  "peerDependencies": {
    "@tanstack/react-query": "^5.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "peerDependenciesMeta": {
    "@tanstack/react-query": { "optional": true }
  },

  "dependencies": {
    "firebase": "^12.3.0"
  },

  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@mswjs/data": "^0.16.2",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.0",
    "@types/node": "^24.3.1",
    "eslint": "^9.36.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  },

  "engines": {
    "node": ">=20.11.0"
  }
}
