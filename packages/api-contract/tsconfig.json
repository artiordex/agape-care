{
  "compilerOptions": {
    "composite": true,

    "rootDir": "./src",
    "outDir": "../../dist/packages/api-contract",
    "declarationDir": "../../dist/packages/api-contract",
    "tsBuildInfoFile": "../../dist/packages/api-contract/.tsbuildinfo",

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,

    "lib": ["ES2022"],
    "types": ["node"],

    "allowJs": true,
    "checkJs": false,

    "resolveJsonModule": true,
    "exactOptionalPropertyTypes": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],

  "references": [
    { "path": "../core" }
  ]
}
