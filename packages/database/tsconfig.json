{
  "extends": "../../tsconfig.app.json",

  "compilerOptions": {
    "composite": true,

    "rootDir": "./src",
    "outDir": "../../dist/packages/database",
    "declarationDir": "../../dist/packages/database",
    "tsBuildInfoFile": "../../dist/packages/database/.tsbuildinfo",

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "verbatimModuleSyntax": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,

    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },

  "include": [
    "src/**/*",
    "prisma/**/*.ts",
    "prisma/seed.ts"
  ],

  "exclude": [
    "dist",
    "node_modules",
    "src/generated",
    "prisma/migrations"
  ],

  "references": [
    { "path": "../core" },
    { "path": "../logger" }
  ]
}
