{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": "../../dist/packages/database",
    "declarationDir": "../../dist/packages/database",
    "tsBuildInfoFile": "../../dist/packages/database/.tsbuildinfo",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },

  "include": ["src/**/*", "prisma/**/*.ts", "prisma/seed.ts"],

  "exclude": ["dist", "node_modules", "src/generated", "prisma/migrations"],

  "references": [{ "path": "../logger" }]
}
