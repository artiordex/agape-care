{
  "name": "@agape-care/server",
  "version": "1.0.0",
  "description": "Agape-Care 서버 공통 모듈 및 유틸리티 (NestJS 기반)",
  "private": true,
  "type": "module",
  "sideEffects": false,

  "files": ["dist"],

  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server-types": {
      "types": "./dist/server-types.d.ts",
      "import": "./dist/server-types.js"
    },
    "./package.json": "./package.json"
  },

  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },

  "dependencies": {
    "@agape-care/core": "workspace:*",
    "@agape-care/logger": "workspace:*",
    "@agape-care/database": "workspace:*",

    "@anthropic-ai/sdk": "^0.61.0",
    "@sentry/nestjs": "^10.14.0",
    "@slack/web-api": "^7.6.0",
    "bcrypt": "^6.0.0",
    "google-auth-library": "^10.3.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "openai": "^5.20.0",
    "redis": "^5.8.2",
    "rxjs": "^7.8.2",
    "zod": "^3.23.8"
  },

  "peerDependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/swagger": "^11.2.0"
  },

  "peerDependenciesMeta": {
    "@nestjs/common": { "optional": true },
    "@nestjs/core": { "optional": true },
    "@nestjs/swagger": { "optional": true }
  },

  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/nodemailer": "^7.0.1",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/node": "^24.3.1",
    "eslint": "^9.36.0",
    "rimraf": "^6.0.1",
    "typescript": "5.6.3"
  },

  "nx": {
    "implicitDependencies": ["core", "logger", "database"]
  },

  "engines": {
    "node": ">=20.11"
  }
}
