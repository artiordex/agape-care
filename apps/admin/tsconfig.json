{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "allowJs": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // 앱 내부 전용 경로 alias
    "paths": {
      "@/app/*": ["src/app/*"],
      "@/components/*": ["src/components/*"],
      "@/data/*": ["src/data/*"],
      "@/lib/*": ["src/lib/*"],
      "@/utils/*": ["src/utils/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/styles/*": ["src/styles/*"],
      "@/providers/*": ["src/providers/*"]
    },
    // Next.js incremental build
    "tsBuildInfoFile": "./.next/tsconfig.tsbuildinfo"
  },
  "include": [
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../dist/apps/admin/.next/types/**/*.ts"
, "src/app/(admin)/staff/schedule/schedule.typets"  ],
  "exclude": ["node_modules", ".next", "dist", "out"]
}
