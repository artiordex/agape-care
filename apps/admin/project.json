{
  "name": "@agape-care/admin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/admin/src",
  "projectType": "application",
  "tags": ["type:app", "layer:frontend", "nextjs", "admin"],

  "targets": {
    "dev": {
      "command": "pnpm --filter @agape-care/admin dev",
      "options": {
        "cwd": "apps/admin"
      }
    },

    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{workspaceRoot}/dist/apps/admin"],
      "options": {
        "root": "apps/admin",
        "outputPath": "dist/apps/admin"
      }
    },

    "serve": {
      "executor": "@nx/next:start",
      "options": {
        "buildTarget": "@agape-care/admin:build",
        "port": 3001
      }
    },

    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/admin/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },

  "implicitDependencies": ["@agape-care/ui", "@agape-care/api-contract"]
}
