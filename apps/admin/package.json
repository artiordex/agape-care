{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",

    "paths": {
      "@agape-care/core": ["../../dist/packages/core/index.d.ts"],
      "@agape-care/core/*": ["../../dist/packages/core/*"],
      "@agape-care/configs": ["../../dist/packages/configs/index.d.ts"],
      "@agape-care/configs/*": ["../../dist/packages/configs/*"],
      "@agape-care/logger": ["../../dist/packages/logger/index.d.ts"],
      "@agape-care/logger/*": ["../../dist/packages/logger/*"],
      "@agape-care/client": ["../../dist/packages/client/index.d.ts"],
      "@agape-care/client/*": ["../../dist/packages/client/*"],
      "@agape-care/ui": ["../../dist/packages/ui/index.d.ts"],
      "@agape-care/ui/*": ["../../dist/packages/ui/*"],
      "@agape-care/api-contract": ["../../dist/packages/api-contract/index.d.ts"],
      "@agape-care/api-contract/*": ["../../dist/packages/api-contract/*"],

      "@/components/*": ["src/components/*"],
      "@/data/*": ["src/data/*"],
      "@/lib/*": ["src/lib/*"],
      "@/utils/*": ["src/utils/*"]
    },

    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "react", "react-dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "incremental": true,
    "tsBuildInfoFile": "./.next/.tsbuildinfo"
  },

  "include": [
    "src/next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules", ".next", "out", "dist"]
}
