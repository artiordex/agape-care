{
  "name": "@agape-care/api",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "tags": ["type:app", "layer:backend", "platform:node"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "outputs": ["{workspaceRoot}/dist/apps/api"],
      "options": {
        "command": "nest build",
        "cwd": "apps/api"
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "@agape-care/api:build",
        "watch": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "vitestConfig": "../../vitest.config.ts",
        "passWithNoTests": true
      },
      "outputs": ["{workspaceRoot}/coverage/apps/api"]
    }
  },
  "implicitDependencies": ["@agape-care/database", "@agape-care/logger", "@agape-care/api-contract"]
}
