{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "builder": {
      "type": "swc",
      "options": {
        "swcrcPath": ".swcrc"
      }
    },
    "typeCheck": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.json",
    "outDir": "../../dist/apps/api",
    "assets": [
      {
        "include": "src/**/*.json",
        "outDir": "../../dist/apps/api"
      },
      {
        "include": "src/**/*.md",
        "outDir": "../../dist/apps/api"
      }
    ]
  },
  "generateOptions": {
    "spec": false
  }
}
