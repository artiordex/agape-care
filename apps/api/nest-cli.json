{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "monorepo": true,
  "monorepoRoot": "../../",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.json",
    "assets": [
      {
        "include": "src/**/*.json",
        "outDir": "./dist"
      },
      {
        "include": "src/**/*.md",
        "outDir": "./dist"
      }
    ]
  },
  "generateOptions": {
    "spec": false
  }
}
