{
  "name": "@connectwon/api",
  "version": "1.0.0",
  "description": "ConnectWon REST-API 기반 백엔드",
  "private": true,
  "main": "dist/apps/api/main.js",

  "__comment_scripts": "pnpm scripts 명령어",
  "scripts": {
    "dev": "nx serve @connectwon/api",
    "build": "nx build @connectwon/api",
    "build:ci": "nx build @connectwon/api --skip-nx-cache",
    "type-check": "tsc -p tsconfig.json --noEmit",

    "start": "node dist/apps/api/main.js",
    "start:prod": "node --enable-source-maps dist/apps/api/main.js",

    "start:pm2": "pm2-runtime ecosystem.config.js --env production",
    "start:pm2:dev": "pm2 start ecosystem.config.js --only connectwon-api-dev",

    "clean": "pnpm -w exec rimraf dist",
    "clean:all": "pnpm -w exec rimraf dist node_modules .turbo .nx",

    "lint": "nx lint @connectwon/api",
    "test": "nx test @connectwon/api",
    "format": "nx format:write"
  },

  "__comment_dependencies": "런타임 의존성",
  "dependencies": {
    "@connectwon/api-contract": "workspace:*",
    "@connectwon/core": "workspace:*",
    "@connectwon/database": "workspace:*",
    "@connectwon/logger": "workspace:*",
    "@nestjs/bullmq": "^11.0.3",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.58.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },

  "__comment_dev": "개발 의존성",
  "devDependencies": {
    "@nestjs/bull": "^11.0.3",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.1.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.1"
  },

  "__comment_engines": "런타임 요구사항",
  "engines": {
    "node": ">=20.11"
  }
}
