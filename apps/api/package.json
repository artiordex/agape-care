{
  "name": "@agape-care/api",
  "version": "1.0.0",
  "description": "Agape-Care REST-API 기반 백엔드",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "nx serve @agape-care/api",
    "build": "nest build",
    "build:ci": "nest build",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "start": "node dist/main.js",
    "start:prod": "node --enable-source-maps dist/main.js",
    "start:pm2": "pm2-runtime ecosystem.config.js --env production",
    "start:pm2:dev": "pm2 start ecosystem.config.js --only agape-care-api-dev",
    "clean": "pnpm -w exec rimraf dist",
    "clean:all": "pnpm -w exec rimraf dist node_modules .turbo .nx",
    "lint": "nx lint @agape-care/api",
    "test": "nx test @agape-care/api",
    "format": "nx format:write"
  },
  "dependencies": {
    "@agape-care/api-contract": "workspace:*",
    "@agape-care/database": "workspace:*",
    "@agape-care/logger": "workspace:*",
    "@nestjs/bullmq": "^11.0.3",
    "@nestjs/common": "^10.4.22",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.4.22",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.22",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/throttler": "^6.5.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.58.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/bull": "^11.0.3",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.1.6",
    "@nx/nest": "^22.4.1",
    "@nx/webpack": "^22.4.1",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.1",
    "@types/passport-jwt": "^4.0.1",
    "webpack": "^5.104.1"
  },
  "engines": {
    "node": ">=22"
  }
}
