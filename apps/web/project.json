{
  "name": "@agape-care/web",
  "sourceRoot": "apps/web/src",
  "projectType": "application",
  "tags": ["type:app", "layer:frontend", "platform:nextjs"],

  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "options": {
        "outputPath": "dist/apps/web",
        "root": "apps/web",
        "env": {
          "NEXT_PUBLIC_APP_TYPE": "web"
        }
      }
    },

    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "@agape-care/web:build",
        "dev": true,
        "port": 3000,
        "env": {
          "NEXT_PUBLIC_APP_TYPE": "web"
        }
      }
    },

    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/web/**/*.ts", "apps/web/**/*.tsx"]
      }
    },

    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "passWithNoTests": true
      }
    }
  },

  "implicitDependencies": ["ui", "api-contract"]
}
