{
  "name": "@agape-care/web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web/src",
  "projectType": "application",
  "tags": ["type:app", "layer:frontend", "nextjs", "web"],
  "targets": {
    "dev": {
      "command": "pnpm --filter @agape-care/web dev",
      "options": {
        "cwd": "apps/web"
      }
    },
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{workspaceRoot}/dist/apps/web"],
      "options": {
        "root": "apps/web",
        "outputPath": "dist/apps/web"
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "@agape-care/web:build",
        "dev": true,
        "port": 3000
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/web/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "passWithNoTests": true
      }
    }
  },
  "implicitDependencies": ["@agape-care/ui", "@agape-care/api-contract"]
}
