{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/data/*": ["src/data/*"],
      "@/lib/*": ["src/lib/*"]
    },
    "tsBuildInfoFile": "./.next/.tsbuildinfo",
    "allowJs": true
  },
  "include": [
    "../../dist/apps/web/.next/types/**/*.ts",
    "../admin/src/app/mobile",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "src/**/*",
    "../../dist/dist/apps/web/.next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", "dist", "out"]
}
