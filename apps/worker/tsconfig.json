{
  "extends": "../../tsconfig.node.json",

  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "../../dist/apps/worker",
    "tsBuildInfoFile": "../../dist/apps/worker/.tsbuildinfo",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "isolatedModules": false
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],

  "references": [
    { "path": "../../packages/core" },
    { "path": "../../packages/database" },
    { "path": "../../packages/logger" },
    { "path": "../../packages/api-contract" }
  ]
}
