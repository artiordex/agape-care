{
  "name": "@agape-care/worker",
  "sourceRoot": "apps/worker/src",
  "projectType": "application",
  "tags": ["scope:worker", "type:application", "layer:backend"],

  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "apps/worker/src/main.ts",
        "tsConfig": "apps/worker/tsconfig.json",
        "outputPath": "dist/apps/worker",
        "assets": [
          "apps/worker/src/**/*.json",
          {
            "input": "apps/worker",
            "glob": "package.json",
            "output": "."
          }
        ]
      },
      "outputs": ["{workspaceRoot}/dist/apps/worker"]
    },

    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "@agape-care/worker:build",
        "watch": true,
        "inspect": false
      },
      "configurations": {
        "production": {
          "watch": false,
          "inspect": false
        }
      }
    },

    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "apps/worker/vitest.config.ts",
        "passWithNoTests": true
      },
      "outputs": ["{workspaceRoot}/coverage/apps/worker"]
    },

    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/worker/**/*.ts"]
      }
    },

    "type-check": {
      "executor": "@nx/js:tsc",
      "options": {
        "tsConfig": "apps/worker/tsconfig.json",
        "noEmit": true
      }
    },

    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f infra/docker/Dockerfile.worker -t agape-care/worker:latest .",
        "cwd": "."
      }
    }
  },

  "implicitDependencies": [
    "@agape-care/database",
    "@agape-care/logger",
    "@agape-care/api-contract"
  ]
}
